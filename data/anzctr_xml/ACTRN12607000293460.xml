  <trial_identification>
    <studytitle>Randomised trial of Ablation vs no Ablation of Barrett's oesophagus with Argon Plasma Coagulation in patients who have not undergone surgery for reflux</studytitle>
    <scientifictitle>Randomised trial of Ablation vs no Ablation of Barrett's oesophagus with Argon Plasma Coagulation in patients who have not undergone surgery for reflux</scientifictitle>
    <utrn />
    <trialacronym>Argon Plasma Coagulation medical trial</trialacronym>
    <secondaryid>nil known</secondaryid>
