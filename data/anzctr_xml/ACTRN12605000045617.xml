  <actrnumber>ACTRN12605000045617</actrnumber>
  <trial_identification>
    <studytitle>An Intervention Trial to Prevent Cognitive Impairment and Depression in Older Men</studytitle>
    <scientifictitle>A randomized, double blind, placebo-controlled trial of homocysteine lowering vitamins to prevent cognitive impairment and depression in older men</scientifictitle>
    <utrn />
    <trialacronym />
  </trial_identification>
  <conditions>
    <healthcondition>Cognitive impairment</healthcondition>
    <healthcondition>Depression</healthcondition>
    <conditioncode>
      <conditioncode1>Neurological</conditioncode1>
      <conditioncode2>Other mental health disorders</conditioncode2>
    </conditioncode>
    <conditioncode>
      <conditioncode1>Mental Health</conditioncode1>
      <conditioncode2>Depression</conditioncode2>
    </conditioncode>
  </conditions>
  <interventions>
    <interventions>Single tablet, once daily, of 2 milligrams of folate, 25 milligrams of B6 and 400 micrograms of B12 for two years of study</interventions>
    <comparator>Placebo for two years of study</comparator>
    <control>Placebo</control>
    <interventioncode>Prevention</interventioncode>
  </interventions>
  <outcomes>
    <primaryOutcome>
      <outcome />
      <timepoint />
    </primaryOutcome>
    <secondaryOutcome>
      <outcome>Other cognitive measures including MMSE, Clock Drawing Test, California Verbal Learning Test and Test of Attention.</outcome>
      <timepoint />
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Depression measures include Beck Depression Inventory and Geriatric Depression Scale.</outcome>
      <timepoint />
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Also changes in Quality of Life as determined by SF 36.</outcome>
      <timepoint />
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Laboratory measures include changes in vitamin, homocysteine and A beta protein levels.</outcome>
      <timepoint />
    </secondaryOutcome>
  </outcomes>
  <eligibility>
    <inclusivecriteria>Men over the age of 75 years with a previous history of hypertension</inclusivecriteria>
    <inclusiveminage>75</inclusiveminage>
    <inclusiveminagetype>Years</inclusiveminagetype>
    <inclusivemaxage>0</inclusivemaxage>
    <inclusivemaxagetype>Not stated</inclusivemaxagetype>
    <inclusivegender>Males</inclusivegender>
    <healthyvolunteer>No</healthyvolunteer>
    <exclusivecriteria>Significant cognitive impairment or depression at baseline, the presence of severe illness likely to cause the subject's death within 12 months, residence in a nursing home or long stay hospital,currently taking B group vitamins or food supplements and those subjects who are unable to complete the studys instruments in English.</exclusivecriteria>
  </eligibility>
  <trial_design>
    <studytype>Interventional</studytype>
