      <conditioncode1>Other</conditioncode1>
      <conditioncode2 />
    </conditioncode>
  </conditions>
  <interventions>
    <interventions>Participants will be randomised to complete either progressive resistance training or graded aerobic training for 4 weeks.</interventions>
    <comparator />
    <control>Active</control>
    <interventioncode>Rehabilitation</interventioncode>
  </interventions>
  <outcomes>
    <primaryOutcome>
      <outcome>An increase in physical strength with no further improvement in fatigue severity. </outcome>
      <timepoint>Measured at onset and completion of the 4 week intervention.</timepoint>
    </primaryOutcome>
    <secondaryOutcome>
      <outcome>No difference in time to fatigue on treadmill test.</outcome>
      <timepoint>Measured at onset and completion of 4 week intervention.</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>No difference in subjective measures (Beck's depression index, fatigue severity scale &amp; SF-36).</outcome>
      <timepoint>Measured at onset and completion of 4 week intervention.</timepoint>
    </secondaryOutcome>
  </outcomes>
  <eligibility>
