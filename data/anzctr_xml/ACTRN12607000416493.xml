  <trial_identification>
    <studytitle>Clinical experience of laparoscopic adjustable gastric banding in a public hospital setting to achieve weight loss in morbidly obese patients</studytitle>
    <scientifictitle>Patients having laparoscopic adjustable gastric banding for obesity and their long term results with respect to weight loss in morbidly obese patients</scientifictitle>
    <utrn />
    <trialacronym />
  </trial_identification>
  <conditions>
    <healthcondition>Obesity surgery</healthcondition>
