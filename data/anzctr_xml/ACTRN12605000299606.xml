  <actrnumber>ACTRN12605000299606</actrnumber>
  <trial_identification>
    <studytitle>Improving intestinal function after surgery</studytitle>
    <scientifictitle>A prospective, randomised, double-blind, controlled trial examining the effects of prostaglandin inhibition on outcomes after intestinal surgery.</scientifictitle>
    <utrn />
    <trialacronym>POINT study</trialacronym>
  </trial_identification>
  <conditions>
    <healthcondition>Cessation of intestinal motor function post gastrointestinal surgery</healthcondition>
    <conditioncode>
      <conditioncode1>Surgery</conditioncode1>
      <conditioncode2>Other surgery</conditioncode2>
    </conditioncode>
    <conditioncode>
      <conditioncode1>Oral and Gastrointestinal</conditioncode1>
      <conditioncode2>Normal oral and gastrointestinal development and function</conditioncode2>
    </conditioncode>
  </conditions>
  <interventions>
    <interventions>3 study groups; placebo, Diclofenac, Celecoxib given as a preoperative dose and continued until discharge, or 7 days postoperatively. All patients receive Pantoprazole 40 mg daily.</interventions>
    <comparator>Placebo</comparator>
    <control>Placebo</control>
    <interventioncode>None</interventioncode>
  </interventions>
  <outcomes>
    <primaryOutcome>
      <outcome>Time from operation to passage of flatus and faeces</outcome>
      <timepoint>once daily post surgery for a week</timepoint>
    </primaryOutcome>
    <primaryOutcome>
      <outcome>Resumption of liquid and solid food intake</outcome>
      <timepoint>once daily post surgery for a week</timepoint>
    </primaryOutcome>
    <secondaryOutcome>
      <outcome>Postoperative vomiting, nasogastric tube usage (and losses per tube if inserted).</outcome>
      <timepoint>daily post surgery for a week</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Postoperative renal function </outcome>
      <timepoint>Measured days 1,3,5</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Blood loss or perioperative bleeding.</outcome>
      <timepoint>daily post surgery for a week</timepoint>
    </secondaryOutcome>
  </outcomes>
  <eligibility>
    <inclusivecriteria>Patients underoing gastrointestinal surgery that involves intestinal manipulation (chiefly colorectal surgery). No recent history of gastrointestinal ulceration, intolerance to nonsteriodal antiflammatory drugs. Creatinine clearance greater than 30 ml/min. No requirement for postoperative ACE inhibitors.</inclusivecriteria>
    <inclusiveminage>0</inclusiveminage>
    <inclusiveminagetype>No limit</inclusiveminagetype>
    <inclusivemaxage>0</inclusivemaxage>
    <inclusivemaxagetype>No limit</inclusivemaxagetype>
    <inclusivegender>Both males and females</inclusivegender>
    <healthyvolunteer>No</healthyvolunteer>
    <exclusivecriteria>renal dysfuction, asthma, anticoagulants</exclusivecriteria>
  </eligibility>
