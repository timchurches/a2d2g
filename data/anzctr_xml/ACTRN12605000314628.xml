  <trial_identification>
    <studytitle>Effectiveness and safety of acupuncture for migraine: a randomised, single blind and sham controlled trial</studytitle>
    <scientifictitle>Evaluation of effectiveness and safety of acupuncture in the treatment of migraine: a randomised, single blind and sham controlled trial</scientifictitle>
    <utrn />
    <trialacronym />
  </trial_identification>
  <conditions>
    <healthcondition>Chronic migraine</healthcondition>
    <conditioncode>
      <conditioncode1>Neurological</conditioncode1>
      <conditioncode2>Other neurological disorders</conditioncode2>
    </conditioncode>
  </conditions>
  <interventions>
    <interventions>All participants will be randomised into either real acupuncture or sham acupuncture group to receive 16 sessions of treatment over a period of 20 weeks.</interventions>
    <comparator>Sham acupuncture</comparator>
    <control>Placebo</control>
    <interventioncode>None</interventioncode>
  </interventions>
  <outcomes>
    <primaryOutcome>
      <outcome>Frequency of migraine attacks between the two groups</outcome>
      <timepoint />
    </primaryOutcome>
    <primaryOutcome>
      <outcome>Duration of migraine attacks between the two groups</outcome>
      <timepoint />
    </primaryOutcome>
    <primaryOutcome>
      <outcome>Intensity of migraine attacks between the two groups</outcome>
      <timepoint />
    </primaryOutcome>
    <primaryOutcome>
      <outcome>Relief medication between the two groups</outcome>
      <timepoint />
    </primaryOutcome>
    <secondaryOutcome>
      <outcome>Migraine Specific Quality of Life (MSQOL) </outcome>
      <timepoint>Assessed once every four weeks.</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Heat and pressure pain thresholds.</outcome>
      <timepoint>Tested twice at baseline and after treatment respectively.</timepoint>
    </secondaryOutcome>
  </outcomes>
  <eligibility>
    <inclusivecriteria>Current history of migraine symptoms; and provision of written consent to participante.</inclusivecriteria>
    <inclusiveminage>18</inclusiveminage>
    <inclusiveminagetype>Years</inclusiveminagetype>
    <inclusivemaxage>80</inclusivemaxage>
    <inclusivemaxagetype>Years</inclusivemaxagetype>
    <inclusivegender>Both males and females</inclusivegender>
    <healthyvolunteer>No</healthyvolunteer>
    <exclusivecriteria>Current pregnancy or malignancy; had acupuncture treatment in the previous 6 months; history of head injury or whiplash; severe arrhythmia or heart filure, brain tumour or epilepsy; and haemophiliac.</exclusivecriteria>
  </eligibility>
