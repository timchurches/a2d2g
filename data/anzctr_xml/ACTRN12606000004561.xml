  <trial_identification>
    <studytitle>International, multicentre: Perhexiline in Aortic Stenosis study.</studytitle>
    <scientifictitle>Effects of perhexiline on the symptomatic status in elderly patients with severe aortic stenosis.</scientifictitle>
    <utrn />
    <trialacronym>IMPASS</trialacronym>
  </trial_identification>
  <conditions>
    <healthcondition>Sever aortic stenosis.</healthcondition>
    <conditioncode>
      <conditioncode1>Cardiovascular</conditioncode1>
      <conditioncode2>Other cardiovascular diseases</conditioncode2>
    </conditioncode>
  </conditions>
  <interventions>
    <interventions>Perhexiline 100mgs BD for 8 weeks.</interventions>
    <comparator>Placebo for 8 weeks.</comparator>
    <control>Placebo</control>
    <interventioncode>Treatment: drugs</interventioncode>
  </interventions>
  <outcomes>
    <primaryOutcome>
      <outcome>Symptomatic status.   It is anticipated that there will be an improvement in symptomatic status after 8 weeks of therapy.</outcome>
      <timepoint>After 8 weeks of treatment</timepoint>
    </primaryOutcome>
    <secondaryOutcome>
      <outcome>Functional class, LV function, 6 min walk distance, quality of life as assessed via SF36 and Minnesota Living with Heart Failure questionnaires, BNP concentration.</outcome>
      <timepoint>After 8 weeks of therapy.  </timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Symptomatic status over long term treatment, correlations between perhexiline level and symptomatic improvement and long term effects.</outcome>
      <timepoint>After 52 weeks of therapy.</timepoint>
    </secondaryOutcome>
  </outcomes>
  <eligibility>
