  <trial_identification>
    <studytitle>Night casting and stretching to improve function in people with Charcot-Marie-Tooth disease</studytitle>
    <scientifictitle>Night casting and stretching to improve function in people with Charcot-Marie-Tooth disease</scientifictitle>
    <utrn />
    <trialacronym />
  </trial_identification>
  <conditions>
    <healthcondition>Charcot-Marie-Tooth disease</healthcondition>
    <conditioncode>
      <conditioncode1>Human genetics and inherited disorders</conditioncode1>
      <conditioncode2>Other human genetics and inherited disorders</conditioncode2>
    </conditioncode>
    <conditioncode>
      <conditioncode1>Neurological</conditioncode1>
      <conditioncode2>Other neurological disorders</conditioncode2>
    </conditioncode>
  </conditions>
  <interventions>
    <interventions>Night casting and stretching group: removable plaster casts worn at night for 8 hours, every night for 4 weeks.  Night casting is followed by a daily stretching program, conducted at home for 4 weeks.</interventions>
    <comparator>Usual care group: usual acitvites are maintained for 8 weeks.</comparator>
    <control>Active</control>
  </interventions>
  <outcomes>
    <primaryOutcome>
      <outcome>The subject's ability to perform functional tasks will be measured using the Patient Specific Functional Scale.</outcome>
      <timepoint>Measured at baseline, and again after 4 weeks and 8 weeks.</timepoint>
    </primaryOutcome>
    <secondaryOutcome>
      <outcome>Ankle dorsiflexion range of motion</outcome>
      <timepoint>Assessed at baseline, and again after 4 weeks and 8 weeks</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Walking velocity</outcome>
      <timepoint>Assessed at baseline, and again after 4 weeks and 8 weeks</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Balance</outcome>
      <timepoint>Assessed at baseline, and again after 4 weeks and 8 weeks</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Stair-climbing ability and foot posture</outcome>
      <timepoint>Assessed at baseline, and again after 4 weeks and 8 weeks</timepoint>
    </secondaryOutcome>
  </outcomes>
  <eligibility>
    <inclusivecriteria>Charcot-Marie-Tooth disease of any type; aged 7-20 years; restricted dorsiflexion range of motion</inclusivecriteria>
    <inclusiveminage>7</inclusiveminage>
    <inclusiveminagetype>Years</inclusiveminagetype>
    <inclusivemaxage>20</inclusivemaxage>
    <inclusivemaxagetype>Years</inclusivemaxagetype>
    <inclusivegender>Both males and females</inclusivegender>
    <healthyvolunteer>No</healthyvolunteer>
    <exclusivecriteria>Previous surgery to foot or ankle, recent ankle sprain or fracture to either foot, stretching program within last 2 months.</exclusivecriteria>
  </eligibility>
