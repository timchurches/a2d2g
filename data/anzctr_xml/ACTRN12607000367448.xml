  <trial_identification>
    <studytitle>The long term effect of inhaled hypertonic saline (6%) in non-cystic fibrosis bronchiectasis.</studytitle>
    <scientifictitle>The long term effect of inhaled hypertonic saline (6%) on pulmonary exacerbations, quality of life and lung function in patients with non-cystic fibrosis bronchiectasis.</scientifictitle>
    <utrn />
    <trialacronym />
    <secondaryid>ClinicalTrials.gov: NCT00484263</secondaryid>
  </trial_identification>
  <conditions>
    <healthcondition>Non-cystic fibrosis bronchiechtasis</healthcondition>
    <conditioncode>
      <conditioncode1>Respiratory</conditioncode1>
      <conditioncode2>Other respiratory disorders / diseases</conditioncode2>
    </conditioncode>
  </conditions>
  <interventions>
    <interventions>Hypertonic saline (6%) - 5mls nebulsied twice a day for 12 months</interventions>
    <comparator>Isotonic saline (0/9%) nebulised twice a day for 12 months</comparator>
    <control>Placebo</control>
    <interventioncode>Treatment: drugs</interventioncode>
  </interventions>
  <outcomes>
    <primaryOutcome>
      <outcome>Pulmonary exacerbations</outcome>
      <timepoint>Symptoms monitored on a daily basis for 12 months</timepoint>
    </primaryOutcome>
    <secondaryOutcome>
      <outcome>Quality of life</outcome>
      <timepoint>Assessed at baseline and then at 3, 6 and 12 months</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Antibiotic use</outcome>
      <timepoint>Monitired on a dialy basis for 12 months</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Lung function</outcome>
      <timepoint>Assessed at baseline and then at 3, 6 and 12 months</timepoint>
    </secondaryOutcome>
  </outcomes>
  <eligibility>
    <inclusivecriteria>Diagnosis of bronchiectasis using high resolution computer tomography (HRCT), at least two pulmonary exacerbations over past year, producing sputum daily, stable clinical state</inclusivecriteria>
    <inclusiveminage>18</inclusiveminage>
    <inclusiveminagetype>Years</inclusiveminagetype>
    <inclusivemaxage />
    <inclusivemaxagetype>No limit</inclusivemaxagetype>
    <inclusivegender>Both males and females</inclusivegender>
    <healthyvolunteer>No</healthyvolunteer>
    <exclusivecriteria>Cystic fibrosis, clinically unstable, unable to tolerate hypertonic saline (6%)</exclusivecriteria>
  </eligibility>
