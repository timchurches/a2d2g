      <conditioncode1>Cancer</conditioncode1>
      <conditioncode2>Ovarian and primary peritoneal</conditioncode2>
    </conditioncode>
  </conditions>
  <interventions>
    <interventions>Arm B: Cisplatin (or carboplatin) + cyclophosphamide + tamoxifen orally 20mg twice a day for 5 years</interventions>
