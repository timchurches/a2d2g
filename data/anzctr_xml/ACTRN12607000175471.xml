  <trial_identification>
    <studytitle>Wellness through yogic breathing exercises</studytitle>
    <scientifictitle>Improvement of wellness in participants who suffer from depression, anxiety and stress through a comprehensive Yogic Breathing Program  A controlled trial</scientifictitle>
    <utrn />
    <trialacronym />
  </trial_identification>
  <conditions>
    <healthcondition>Depression</healthcondition>
    <healthcondition>Anxiety</healthcondition>
    <healthcondition>Optimism</healthcondition>
    <healthcondition>Stress</healthcondition>
    <conditioncode>
      <conditioncode1>Mental Health</conditioncode1>
