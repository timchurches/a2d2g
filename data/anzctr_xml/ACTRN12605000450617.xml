  <trial_identification>
    <studytitle>Nocturnal nutritional supplementation in advanced liver disease - a randomised trial</studytitle>
    <scientifictitle>A randomised trial of effects on total body protein status of nocturnal versus daytime nutritional supplementation in patients with liver cirrhosis.</scientifictitle>
    <utrn />
    <trialacronym />
  </trial_identification>
  <conditions>
    <healthcondition>Liver cirrhosis</healthcondition>
    <conditioncode>
      <conditioncode1>Other</conditioncode1>
      <conditioncode2>Liver</conditioncode2>
    </conditioncode>
  </conditions>
  <interventions>
    <interventions>Single-centre, stratified, randomised study to compare total body protein changes in patients with liver cirrhosis taking a nutritional supplement (2 cans Ensure Plus or equivalent) either at night-time or daytime for 12 months.</interventions>
    <comparator>Daytime nutritional supplementation</comparator>
    <control>Active</control>
    <interventioncode>None</interventioncode>
  </interventions>
  <outcomes>
    <primaryOutcome>
      <outcome>Total body protein change from baseline to 6 months.</outcome>
      <timepoint>Measured at baseline and 6 months</timepoint>
    </primaryOutcome>
    <secondaryOutcome>
      <outcome>Fatigue score</outcome>
      <timepoint>Measured at baseline, 3, 6 and 12 months.</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Physiologic function</outcome>
      <timepoint>Measured at baseline, 3, 6 and 12 months.</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Health-related quality of life</outcome>
      <timepoint>Measured at baseline, 3, 6 and 12 months.</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>GH/IGF axis</outcome>
      <timepoint>Measured at baseline, 3, 6 and 12 months.</timepoint>
    </secondaryOutcome>
  </outcomes>
  <eligibility>
    <inclusivecriteria>Patients with chronic liver disease referred for nutritional support who have cirrhosis of the liver. Written informed consent.</inclusivecriteria>
    <inclusiveminage>16</inclusiveminage>
    <inclusiveminagetype>Years</inclusiveminagetype>
    <inclusivemaxage>0</inclusivemaxage>
