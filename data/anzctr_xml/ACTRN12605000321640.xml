    <control>Uncontrolled</control>
    <interventioncode>Treatment: drugs</interventioncode>
  </interventions>
  <outcomes>
    <primaryOutcome>
      <outcome>Reduced asthma exacerbations during 12 months</outcome>
      <timepoint />
    </primaryOutcome>
    <primaryOutcome>
      <outcome>Reduced asthma hospitalisations during 12 months</outcome>
      <timepoint />
    </primaryOutcome>
    <secondaryOutcome>
      <outcome>Cough and asthma score</outcome>
      <timepoint>Completed daily for a duration of 12 months.</timepoint>
    </secondaryOutcome>
    <secondaryOutcome>
      <outcome>Child QOL and carer/parent QOL</outcome>
      <timepoint>Administered monthly for 4 months and then second monthly for 8 months. </timepoint>
    </secondaryOutcome>
  </outcomes>
